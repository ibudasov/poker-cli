{
    "name": "ibudasov/poker-cli",
    "description": "Command Line Interface application for the famous ibudasov/poker",
    "require": {
        "php": ">=7.2",
        "ibudasov/poker": "^0.0.1"
    },
    "autoload": {
        "psr-4": {
            "PokerCli\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0"
    },
    "scripts": {
        "fix": [
            "vendor/bin/php-cs-fixer fix src --rules=@Symfony",
            "vendor/bin/php-cs-fixer fix tests --rules=@Symfony"
        ],
        "test": "./vendor/bin/phpunit tests",
        "test:coverage": "vendor/bin/phpunit tests --coverage-html=var/test-coverage --coverage-clover=clover.xml",
        "theGame": "php -r 'include  __DIR__ . \"/src/Infrastructure/ConsoleRunner.php\"; echo ConsoleRunner::run();'"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Igor Budasov",
            "email": "igor.budasov@gmail.com"
        }
    ]
}
